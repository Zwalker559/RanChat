rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Allow any signed-in user to read and write to any document.
    // NOTE: This is insecure and should be properly configured for a production environment.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
